#! groovy
pipeline { 
agent any
stages {
    stage ( "QA" ) {
        steps {
            echo 'hello world..'  } 
        {
sh echo -e "Hi, please type the word"
read  word
echo "The word you entered is: $word"
echo -e "Can you please enter two words? "
read word1 word2
echo "Here is your input: \"$word1\" \"$word2\""
echo -e "How do you feel about bash scripting? "   
        }
    } 
    }    
    stage ('DEV') {
        steps {
            echo 'who am i' }
        {
                sh 'sudo touch /test' 
            }
        
    }
    }
}
